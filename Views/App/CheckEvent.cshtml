@model Event

@{
    ViewData["Title"] = "Event Info";
    var e = Model;
}

<head>
    <style>
        .vertcolumn {
            display: inline-block;

            width: 40%;
            height: 350px;

            vertical-align: top;

            background-color: #fdfdfd;
        }

        #TextDescription {
            margin-right: 5%;
        }
        #TicketInfo {}
    </style>
</head>

<body>
<div class="fullcontainer"></div>
    <div class="vertcolumn" id="TextDescription">
        <h3>@e.eventName</h3>
        <br/>
        <br/>
        <p>Event Description</p>
    </div>
    <div class="vertcolumn" id="TicketInfo">
        <form method="post" action="StorePay">
            <div class="horzsect" id="num">
                <label>Card Number</label>
                <br/>
                <input type="text" id="num" name="cardNumber"/>
            </div>
            <div class="horzsect" id="exp_cvv">
                <div class="vertsect" id="exp">
                    <label>Expiry</label>
                    <input type="month" id="exp" name="cardExpiry"/>
                </div>
                <div class="vertsect" id="cvv">
                    <label>CVV</label>
                    <input type="text" id="cvv" name="cardCVV"/>
                </div>
            </div>
            <div class="horzsect" id="buttonContainer">
                <label>Remember my card</label>
                <input type="checkbox" id="memory" name="save" />
                <br />
                <input type="submit" name="submitCard" />
            </div>
        </form>
    </div>
</div>
</body>