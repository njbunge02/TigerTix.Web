
@model userModel
    @{
        ViewData["Title"] = "Log In";
    }

<style>
.centered-container {
	display: flex;
    justify-content: center;
    margin-top: 100px;
}

.login-box {
    border: 1px solid rgb(49, 49, 49);
    border-radius: 5px;
    padding: 50px; 
    background-color: rgb(251, 251, 251);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    max-width: 400px; 
    width: 100%;
}

.submit-button {
    color: rgb(255, 255, 255);
    background-color: rgb(0, 82, 145);
    padding: 8px 30px;
    border-radius: 20px;
    border: none;
    cursor: pointer; 
}

.sign-up-button {
        background-color: blue;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
}

</style>

<div class="centered-container" style="margin-top:25px"><h1>Login</h1></div>


<div class="centered-container">
    <form method="post" class="login-box">
        <label>Username:</label>
        <br/>
        <input type="text" name="userName"/>
        <br/>
        <label>Password:</label>
        <br/>
        <input type="text" name="passWord"/>

         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br/><br/>
        <div style="text-align:center;"> <input class="submit-button" type="submit" value="Log in"/>
        <button class="sign-up-button" onclick="redirectToSignUp()">Sign Up</button>
        </div>
    </form>

    
</div>

<script>
    // JavaScript function to redirect to sign-up HTML page
    function redirectToSignUp() {
        window.location.href = "SignUp.cshtml";
    }
</script>